			<!--<mvc:mapping path="/users/login"/>-->
			<!--<bean id="timeInterceptor" class="com.newer.interceptors.TimeInterceptor" p:start="8" p:end="20"/>-->
		<!--</mvc:interceptor>-->
	<!--</mvc:interceptors>-->

	<!--文件上传的解析器-->
	<bean class="org.springframework.web.multipart.commons.CommonsMultipartResolver" id="commonsMultipartResolver">
		<property name="maxUploadSize" value="5242880"/>
	</bean>

</beans>